  ABANDONED
  TIMED_OUT
}

enum ChatQueryType {
  GENERAL
  SKILL_SEARCH
  ROLE_SEARCH
  COMPANY_RESEARCH
  SALARY_INQUIRY
  CAREER_GUIDANCE
  INTERVIEW_PREP
  INDUSTRY_TRENDS
}

enum InsightType {
  WEEKLY
  MONTHLY
  REAL_TIME
  PREDICTION
